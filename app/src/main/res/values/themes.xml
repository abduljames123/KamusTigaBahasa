<!-- res/values/themes.xml -->
<resources>

    <!-- existing app theme -->
    <style name="Theme.KamusTigaBahasa" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- your existing items -->
        <item name="android:fontFamily">@font/poppins</item>
        <!-- tambahkan color, textAppearance, dll bila perlu -->
    </style>

    <!-- Splash theme: no action bar, full-screen, background same as main gradient -->
    <style name="Theme.KamusTigaBahasa.Splash" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- biarkan status bar tampil atau jadikan transparant -->
        <item name="android:windowBackground">@drawable/bg_main_gradient</item>
        <!-- jika mau fullscreen (hilangkan status bar), pakai ini -->
        <item name="android:windowFullscreen">true</item>
        <!-- jika ingin statusbar transparan (opsional) -->
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

</resources>
